echo "Generating schema..."

GEN_DIR_NAME="Generated"
SCHEMA_DIR_NAME="Schema"
SCHEMA_FILE_NAME="schema.json"

DESTINATION_DIR="${SRCROOT}/${GEN_DIR_NAME}"
SCHEMA_PATH="${SRCROOT}/${SCHEMA_DIR_NAME}/${SCHEMA_FILE_NAME}"

if [ ! -f $SCHEMA_PATH ]
then
	echo "No schema.json file found. Please insert your schema file at: ${SCHEMA_PATH}"
	exit 1
fi

mkdir -p $DESTINATION_DIR

echo "Schema: ${SCHEMA_PATH}"
echo "Destination: ${DESTINATION_DIR}"

/tmp/GryphinGenerate -s "${SCHEMA_PATH}" -d "${DESTINATION_DIR}"
